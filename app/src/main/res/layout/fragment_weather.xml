<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="watherviewmodel"
            type="com.example.wather.viewmodel.WeatherViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/fragment_weather_img"
            android:layout_height="300dp"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/weatherDesc"
            android:text="weatherDesc"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Temperature"
                android:layout_alignParentLeft="true"
                android:id="@+id/temperature_label"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="7.7"
                android:layout_marginLeft="5dp"
                android:id="@+id/temperature"
                android:layout_toRightOf="@+id/temperature_label"
                android:textStyle="normal"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Humidity"
                android:layout_toLeftOf="@+id/humidity"
                android:id="@+id/humidity_label"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="7.7"
                android:id="@+id/humidity"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:textStyle="normal"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>


</layout>